<schemalist>
  <schema id="org.freedesktop.Tracker.DB" path="/org/freedesktop/tracker/db/" gettext-domain="tracker">
    <key name="journal-chunk-size" type="i">
      <default>50</default>
      <_summary>Maximum size of journal</_summary>
      <_description>Size of the journal at rotation in MB. Use -1 to disable rotating.</_description>
    </key>
    <key name="journal-rotate-destination" type="s">
      <default>''</default>
      <_summary>Location of journal pieces</_summary>
      <_description>Where to store a journal chunk when it hits the max size.</_description>
    </key>
    <key name="user-data-dir" type="s">
      <default>''</default>
      <_summary>User data dir</_summary>
      <_description>Set to override the user data dir location, unset to use XDG_DATA_HOME</_description>
    </key>
    <key name="user-cache-dir" type="s">
      <default>''</default>
      <_summary>User cache dir</_summary>
      <_description>Set to override the user cache dir location, unset to use XDG_CACHE_HOME</_description>
    </key>
    <key name="ontologies-dir" type="s">
      <default>''</default>
      <_summary>Ontologies dir</_summary>
      <_description>Set to override the ontologies dir location, unset to use -DSHAREDIR pre-processor flag, TRACKER_DB_ONTOLOGIES_DIR has precedence over this setting</_description>
    </key>
  </schema>
</schemalist>
